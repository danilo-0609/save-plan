{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Host=${DB_HOST};Port=${DB_PORT};Username=${DB_USER};Password=${DB_PASS};Database=${DB_NAME};Include Error Detail=true"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": { "Microsoft": "Information" }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "${SEQ_URL}" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Keycloak": {
    "AuthorizationUrl": "${KEYCLOAK_AUTH_URL}"
  },
  "Authentication": {
    "Audience": "account",
    "MetadataAddress": "${METADATA_ADDRESS}",
    "ValidIssuer": "${KEYCLOAK_AUTH_URL}"
  }
}
